<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingList"
    Shell.FlyoutBehavior="Disabled"
    Title="ShoppingList">

    <TabBar>
        <ShellContent
            Title="Add products"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Add category"
            ContentTemplate="{DataTemplate local:AddCategoryPage}"
            Route="AddCategoryPage" />
        <ShellContent
            Title="Shooping list"
            ContentTemplate="{DataTemplate local:ListPage}"
            Route="ListPage" />
        <ShellContent
            Title="Category list"
            ContentTemplate="{DataTemplate local:CategoryPage}"
            Route="CategoryPage" />
    </TabBar>
</Shell>
