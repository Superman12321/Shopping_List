<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.AddCategoryPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        Margin="30">

        <Editor x:Name="nameCategory"
                 Placeholder="Write your category"
                 Margin="5"
                 HeightRequest="40"/>

        <Button
                Grid.Column="1"
                Text="Add Category"    
                HorizontalOptions="Center"
                Margin="5"
                WidthRequest="400"
                BackgroundColor="MidnightBlue"
                TextColor="Grey"
                Clicked="addCategory"
            />
    </VerticalStackLayout>
</ContentPage>